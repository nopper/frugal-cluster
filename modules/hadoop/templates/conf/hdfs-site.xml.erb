<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
 <property>
  <name>dfs.replication</name>
  <value><%= scope.lookupvar('hadoop::params::replication') %></value>
  <description>The actual number of replications can be specified when the file is created.</description>
 </property>
 <property>
  <name>dfs.name.dir</name>
  <value><%= scope.lookupvar('hadoop::params::hdfs_name_path') %></value>
 </property>
 <property>
  <name>dfs.data.dir</name>
  <value><%= scope.lookupvar('hadoop::params::hdfs_data_path') %></value>
 </property>
</configuration>
